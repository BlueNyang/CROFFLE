<UserControl x:Class="CROFFLE_WPF.WPF_xamls.Controls.Onoff_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CROFFLE_WPF.WPF_xamls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="50">
    <Grid>
        <Grid MouseDown="MouseClick">
            <Border x:Name="switch_bd" BorderBrush="black" BorderThickness="1" CornerRadius="10" Background="LightGray"/>
        </Grid>
        <Grid x:Name="changer_grid" Height="20" Width="20" HorizontalAlignment="Left" MouseDown="MouseClick">
            <Border Height="19.5" Width="19.5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Background="White"/>
        </Grid>
    </Grid>
</UserControl>

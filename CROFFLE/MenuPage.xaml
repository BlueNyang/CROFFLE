<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CROFFLE.MenuPage"
             Title="Menu">
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Image Source="dotnet_bot.png" HeightRequest="40" />
            <Label Text="CROFFLE" VerticalOptions="Center" />
        </StackLayout>
    </Shell.TitleView>
    
    <VerticalStackLayout
            Padding="100"
            Spacing="50">
        <Label 
            Text="Munu Item 1"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Munu Item 2"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Munu Item 3"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
            Text="Navigate to Home Page"
            Clicked="OnNavigateClicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
            Text="Theme"
            Clicked="OnNavigateClicked2"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>